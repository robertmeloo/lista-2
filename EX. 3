#include <stdio.h>

int main(void) {

int i, j, a, n, number[30];

printf("Entre com o valor de numeros que deseja colocar na ordem \n");

scanf("%d", &n);

printf("Entre com os numeros \n");

for (i = 0; i<n; ++i)
 scanf("%d", &number[i]);

for (i= 0; i <n; ++i)
{
for (j= i + 1; j <n; ++j)
{
If (number[i]<number[j])
{
a=number[i];
 number[i]=number[j];
 number[j] = a;
}

}

}
printf("Os Numeros estÃ£o em ordem decrescente!n");
for (i = 0; i<n; ++i)

printf("%d\n", number[i]);

return 0;
}
